          "type": [
            "string"
          ]
        },
        "email": {
          "description": "the email of the user",
          "format": "email",
          "type": [
            "string"
          ]
        },
        "identity": {
          "anyOf": [
            {
              "$ref": "#/definitions/user/definitions/id"
            }
          ]
        }
      },
      "links": [
